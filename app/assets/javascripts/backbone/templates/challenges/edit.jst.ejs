<h1>Edit challenge</h1>

<form id="edit-challenge" name="challenge">
  <div class="field">
    <label for="description"> description:</label>
    <input type="text" name="description" id="description" value="<%= description %>" >
  </div>

  <div class="field">
    <label for="n_cards"> n_cards:</label>
    <input type="text" name="n_cards" id="n_cards" value="<%= n_cards %>" >
  </div>

  <div class="field">
    <label for="name"> name:</label>
    <input type="text" name="name" id="name" value="<%= name %>" >
  </div>

  <div class="field">
    <label for="type"> type:</label>
    <input type="text" name="type" id="type" value="<%= type %>" >
  </div>

  <div class="actions">
    <input type="submit" value="Update Challenge" />
  </div>

</form>

