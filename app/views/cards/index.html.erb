<h1>Listing cards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Source</th>
    <th>Set</th>
    <th>Info</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.name %></td>
    <td><%= card.source %></td>
    <td><%= card.set %></td>
    <td><%= card.info %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

